{{ testSections | json }}
%form
  .form-group{ng: {repeat: "question in sections[section].questions", switch: "question.datatype"}}
    %div{ng: {switch: {when: 'string'}}}
      %label
        {{question.question}}
      %input.form-control{ng: {model: 'question.answer'}}
    %div{ng: {switch: {when: 'radio'}}}
      %b.checkbox-label
        {{question.question}}
      .radio{ng: {repeat: "option in question.options"}}
        %label
          %input{ng: {model: 'question.answer', checked: 'option.checked'}, value: "{{option.text}}", type: 'radio', name: "{{question.name}}"}
            {{option.text}}

.row
  .col-xs-12
    %a.pull-right.btn.btn-success{ng: {href: "{{nextSection}}"}, disabled: "disabled", style: "font-size: 3em; box-shadow: 0px 2px 8px rgba(0,0,0,0.4)"}
      Next Step
      %span.fa-stack
        %i.fa.fa-circle-thin.fa-stack-2x
        %i.fa.fa-chevron-right.fa-stack-1x{style: "margin-left: 7px; margin-top: 2px;"}

.row
  .col-xs-12
    %ul
      %li{ng: {repeat: "question in sections[section].questions"}}
        {{ question | json }}
    {{ sections | json }}
