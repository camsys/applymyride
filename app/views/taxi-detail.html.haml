#transit
  .container
    .row
      .col-md-6.col-md-offset-3.col-xs-12
        %h1
          %strong
            Taxi
      .col-md-8.col-md-offset-2.col-xs-12
        .row
          .col-md-8.col-md-offset-2.col-xs-12
            .text-muted
              {{taxiItinerary.comment}}
        .row
          .col-md-8.col-md-offset-2.col-xs-12
            %hr
        .row
          .col-md-8.col-md-offset-2.col-xs-12
            %h3.text-muted
              Estimated fare is:
        .row{style:'padding:20px 0px;'}
          .col-md-8.col-md-offset-2.col-xs-12.text-center
            %h3
              {{taxiItinerary.cost | currency}} 
              %span{'ng-show':'taxiItinerary.returnItinerary'}
                (Going)
            %h3{'ng-show' => 'taxiItinerary.returnItinerary'}
              {{taxiItinerary.returnItinerary.cost | currency}}
              %span
                (Return)
        .row{style:'padding:20px 0px;'}
          .col-md-8.col-md-offset-2.col-xs-12
            %div
              %span{style:'padding-right:4px;'}
                Going to:
              %span
                {{taxiItinerary.destination.line1}} {{taxiItinerary.destination.line2}}
            %div
              %span{style:'padding-right:4px;'}
                From:
              %span
                {{taxiItinerary.origin.line1}} {{taxiItinerary.origin.line2}}
        .row{style:'padding:20px 0px;'}
          .col-md-8.col-md-offset-2.col-xs-12.text-center
            %a.btn.btn-primary.btn-block{ng: {href: "tel:+1{{taxiItinerary.phone}}", click: 'callService(taxiItinerary.phone);'}}
              Call {{taxiItinerary.service_name}}
        .row{style:'padding:20px 0px;'}
          .col-md-8.col-md-offset-2.col-xs-12.text-center
            Their phone number is {{taxiItinerary.phone}}
            
      .row.unstuck-foot.btn-spacing{style: 'margin-top: 20px'}
        .col-md-6.col-md-offset-3.col-xs-12
          .pull-left
            %a.btn{href: "", back: '', ng: {click: "back()"}}
              Back

