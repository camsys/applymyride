-# TODO: Add padding so elements are centered inside their rows
.profile
  .col-xs-12.col-md-6.col-md-offset-3
    .row.alert
      %h2 Work In Progress
    .row
      %h4.text-muted
        My Keystone Login
    .row{style: 'border: 1px solid grey;'}
      .row{style: 'margin: 0px;'}
        .col-xs-3.text-right.text-muted
          %h4
            Name:
        .col-xs-9
          %h4
            {{first_name}} {{last_name}}
      .row{style: 'border-top: 1px solid grey; margin: 0px;'}
        .col-xs-3.text-right.text-muted
          %h4
            Email:
        .col-xs-9
          {{email}}

    .row{style: 'margin-top: 1em'}
      %h4.text-muted
        My Ecolane Profiles
    .row{style: 'border: 1px solid grey;'}
      %table.table
        %thead
          %tr
            %th{scope: 'col'} Ride ID
            %th{scope: 'col'} Agency
            %th{scope: 'col'} County
            %th{scope: 'col'} Active?
            %th{scope: 'col'} Remove
        %tbody
          %tr{ng: {repeat: 'bookingProfile in bookingProfiles track by bookingProfile.key'}}
            %td
              {{ bookingProfile.sharedRideID }}
            %td
              {{ bookingProfile.agency }}
            %td
              {{ bookingProfile.county }}
            %td
              %input{type: 'radio', ng: {model: 'userInfo.activeBookingProfile', value: 'bookingProfile'}}
            %td
              %button{ng: {disabled: 'userBookingProfiles.length <= 1'}}
                X

    .row{style: 'margin-top: 1em', ng: {show: 'profileForm === true'}}
      %h2 Add a New Ecolane Profile
      %form(action='')
        .col-xs-12
          %label(for='') Shared Ride ID: 
          %input{type: 'text'}
        .col-xs-12
          %label(for='') Agency: 
          %input{type: 'text'}
        .col-xs-12
          %label(for='') Date of Birth: 
          %input{type: 'text'} 

    .row{style: 'margin-top: 1em', ng: {show: 'profileForm === true'}}
      .col-xs-12.col-md-6
        %a.btn.btn-primary.btn-block{href: '', ng: {click: 'submitNewProfile'}}
          Submit
      .col-xs-12.col-md-6
        %a.btn.btn-secondary.btn-block{href: '', ng: {click: 'toggleProfileForm()'}}
          Cancel

    .row{style: 'margin-top: 1em', ng: {hide: "profileForm === true"}}
      .col-xs-12.col-md-6
        %a.btn.btn-secondary.btn-block{href: '', ng: {click: 'back()'}}
          Back To Rides
      .col-xs-12.col-md-6
        %a.btn.btn-primary.btn-block{href: '', ng: {click: 'toggleProfileForm()'}}
          Add a Profile
