.container{style: 'padding: 0;'}
  .row{style: 'margin-bottom: 1em;'}
    .col-xs-12.col-md-8.col-md-offset-2{style: 'padding: 0;'}
      .row
        .col-xs-12
          %h2{ng: {show: 'walkItineraries.length > 1'}} Here is your round-trip transit itinerary
          %h2{ng: {show: 'walkItineraries.length == 1'}} Here is your one way transit itinerary
.walkitinerary{ng: {repeat: 'itinerary in walkItineraries'}}
  .row{style: 'margin-bottom: 1em;', ng: {show: '$index == 0'}}
    .col-xs-12.col-md-8.col-md-offset-2{style: 'padding: 0;'}
      .row
        .col-xs-12
          %h2 Outbound Trip
  .row{style: 'margin-bottom: 1em;', ng: {show: '$index == 1'}}
    .col-xs-12.col-md-8.col-md-offset-2{style: 'padding: 0;'}
      .row
        .col-xs-12
          %h2 Return Trip
  .row{style: 'margin-bottom: 1em;'}
    .col-xs-12.col-md-8.col-md-offset-2{style: 'padding: 0;'}
      .row
        .col-xs-12.text-muted
          {{itinerary.dayAndDateDesc}}
      .row
        .col-xs-10.text-left
          %h4
            Approx. {{itinerary.travelTime}} (
            %img.walk-time-icon{ng: {src: 'images/modes/walk.png'}}
            {{itinerary.walkTimeDesc}})
        .col-xs-2.text-right
          %h4{style: 'float:right; vertical-align: bottom;'} Free
  .row
    .col-xs-12.col-md-8.col-md-offset-2.walk-body
      .border-between.timeline{'index' => '{{$index}}', ng: {click: 'test()', repeat: 'leg in itinerary.json_legs track by $index', class: '{"mode_bus": leg.mode == "BUS", "mode_walk": leg.mode == "WALK"}'}}
        .row.even-height-row
          .col-xs-2.right-side
            %h4 {{leg.startTimeDesc}}
          .col-xs-1.right-side
            %i.fa.fa-circle-o.fa-lg.waypoint
          .col-xs-9.leg-info.pull-left.left-side
            .walk-info{ng: {show: 'leg.mode == "WALK"'}}
              .row
                .leg-info.col-xs-12.leg-header
                  %h4 {{leg.from.name}}
              .row
                .leg-info.col-xs-12
                  %h4.text-muted Walk
                  %h4.text-muted {{leg.distanceDesc}} Miles ({{leg.travelTime}})
              .animate-show.blah{ng: {hide: 'showDiv[$index]'}}
                .row{ng: {repeat: 'step in leg.steps'}}
                  .leg-info.col-xs-12{style: 'padding-left: 50px;'}
                    %img.walk-arrow{height: '30px', width: '30px', ng: {src: 'images/transit/{{step.arrow}}.png'}}
                    .row
                      .leg-info.col-xs-12
                        .walk-step
                          {{step.description}}
                    .row.text-muted
                      .leg-info.col-xs-12
                        .walk-step{ng: {show: '!$last'}}
                          {{step.distanceDesc}} miles
                        %div{ng: {show: '$last'}}
                          {{step.distanceDesc}} miles
      .border-between.timeline{style: 'margin-bottom: 1em;'}
        .row.even-height-row
          .col-xs-2.right-side
            %h4 {{itinerary.destinationTimeDesc}}
          .col-xs-1.right-side
            %i.destination.fa.fa-dot-circle-o.fa-lg.waypoint{style: 'margin-left: -18px;'}
          .col-xs-9.leg-info.pull-left.left-side
            .bus-info
              .row
                .leg-info.col-xs-12.leg-header
                  %h4 {{itinerary.destinationDesc}}

.row{style: 'margin-top: 1em;'}
  .col-md-8.col-md-offset-2.col-xs-12
    .row{ng:{show: 'email'}}
      .col-xs-6.text-left
        %a.btn.btn-success.btn-block{ng: {click: 'saveWalkItinerary()'}}
          Save this itinerary to My Rides
      .col-xs-6.text-right
        %a.btn.btn-success.btn-block{ng: {click: 'emailWalkItinerary()'}}
          Email this itinerary
    .row{ng:{show: '!email'}}
      .col-xs-6.col-xs-offset-3.text-center
        %a.btn.btn-success.btn-block{ng: {click: 'emailWalkItinerary()'}}
          Email this itinerary

.container.sticky-footer
  .row{style: 'margin-top: 10px'}
    .col-md-8.col-md-offset-2.col-xs-6.col-xs-offset-3
      .pull-left
        %a.btn-back{back: '', ng: {click: "back()"}}
          %span{ng: {include: "'views/button-chevron-left.html'"}}
          Back
