.container#paratransit{style: 'padding: 0;', index: '{{$index}}', ng: {show: '!booking_failed', repeat: 'itinerary in paratransitItineraries'}}
  %div{ng:{show: '$index == 0'}}
    .row{style: 'margin-bottom: 1em;', ng: {show: 'email'}}
      .col-xs-12.text-center{style: 'padding: 0;'}
        %h2 Your trip has been saved
    .row{style: 'margin-bottom: 1em; margin-top: 1em;'}
      .col-xs-12.col-md-6.col-md-offset-3.col-sm-6.col-sm-offset-3.text-left.no-padding
        %a.btn.btn-primary.btn-block{href: '', ng: {click: 'reset()'}}
          Plan another ride
        %a.btn.btn-danger.btn-block{style: 'margin-top: 1em; margin-bottom: 1em;', href: '', ng: {click: 'cancelTrip(paratransitItineraries)'}}
          Cancel this ride
        %a.btn-block.text-center.link-btn{"ng-href" => "#/plan/my_rides"}
          View my saved rides
  .headerwrap{ng:{show: '$index == 0'}}
    .row
      .col-xs-6.text-right.text-muted
        Escorts/Companions:
      .col-xs-6.text-left
        {{escort}}
    .row{style: 'margin-bottom: 1em;'}
      .col-xs-6.text-right.text-muted
        Instructions to Driver:
      .col-xs-6.text-left
        {{driverInstructions}}
    .row
      .col-xs-12.col-md-8.col-md-offset-2.no-padding
        %h2 Trip Details
  .row{style: 'margin-top: 1em;', ng: {show: '$index == 0'}}
    .col-xs-12.col-md-8.col-md-offset-2.no-padding
      .row
        .col-xs-12
          %h2 Outbound Trip
  .row{ng: {show: '$index == 1', style: "$index == 1 ? {'margin-top': '2em'} : {}"}}
    .col-xs-12.col-md-8.col-md-offset-2.no-padding
      .row
        .col-xs-12
          %h2 Return Trip
  .row
    .col-xs-12.col-md-8.col-md-offset-2.no-padding
      .row
        .col-xs-12.text-muted
          {{itinerary.dayAndDateDesc}}
      .row
        .col-xs-10.text-left
          %h4 {{booking_results[$index].travelTime}}
        .col-xs-2.text-right
          %h4{style: 'float:right; vertical-align: bottom;'} {{itinerary.cost | currency | free}}
  .row
    .col-xs-12.col-md-8.col-md-offset-2.paratransit-body
      .border-between.timeline.mode_wait
        .row.even-height-row
          .col-xs-2.right-side.no-padding
            %h4 {{booking_results[$index].wait_startDesc}}
          .col-xs-1.right-side
          .col-xs-9.leg-info.left-side
            .wait-info
              .row
                .leg-info.col-xs-12
                  %h5.text-muted WAIT for Shared Ride
              .row
                .leg-info.col-xs-12
                  %h4.text-muted {{itinerary.start_location.name}}
              .row
                .leg-info.col-xs-12
                  %h5.text-muted Confirm #: {{booking_results[$index].confirmation_id}}
      .border-between.timeline.mode_paratransit
        .row.even-height-row
          .col-xs-2.right-side.no-padding
            %h4 {{booking_results[$index].wait_endDesc}}
          .col-xs-1.right-side
            %i.fa.fa-circle-o.fa-lg.waypoint{style: 'color: #0E5302;'}
          .col-xs-9.leg-info.left-side
            .bus-info
              .row{style: 'height: 100px'}
      .border-between.timeline.mode_paratransit
        .row.even-height-row
          .col-xs-2.right-side.no-padding
            %h4 {{booking_results[$index].arrivalDesc}}
          .col-xs-1.right-side.no-pseudo
            %i.fa.fa-circle-o.fa-lg.waypoint{style: 'color: #0E5302;'}
          .col-xs-9.leg-info.left-side
            .bus-info
              .row
                .leg-info.col-xs-12.leg-header
                  %h5.text-muted ARRIVE
                  %h4.text-muted {{itinerary.end_location.name}}
.container{style: 'padding: 0;', ng: {show: 'booking_failed'}}
  .row{style: 'margin-bottom: 1em;'}
    .col-xs-12.col-md-8.col-md-offset-2{style: 'padding: 0;'}
      .row
        .col-xs-12.col-md-8.col-md-offset-2{style: 'background-color: #FFFFDC'}
          %h3{style: 'opacity: 1'} Sorry! There is a problem with your request
      .row
        .col-xs-12.col-md-8.col-md-offset-2
          %h3
            .fa.fa-phone
            Call to learn more
            %a.btn-next{href: "tel://1-844-724-7433"}
              1-844-PA4-RIDE


